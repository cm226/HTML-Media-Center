# this command isnt really that scary, just picks stuff out until it gets the ip address only
my_ip=$(ip addr | grep 172 | awk '{$1=$1};1' | cut -d " " -f 2 | cut -d "/" -f 1)
sed -i "s/<host>/$my_ip /g" /home/craig/Programming/Server/HTML-Media-Center/Server/bin/config.ini

if [ "$1" != "Release" ] 
then 
    cd /home/craig/Programming/Server/HTML-Media-Center/Server/
    bash
    exit 0
fi

cd /home/craig/Programming/Server/HTML-Media-Center/Server/
./UpdateBootstraper.sh

exit 0